<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControladorRegistrar</servlet-name>
        <servlet-class>com.miempresa.controller.ControladorRegistrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConRecuContra</servlet-name>
        <servlet-class>com.miempresa.controller.ConRecuContra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoController</servlet-name>
        <servlet-class>com.miempresa.controller.ProductoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorReg</servlet-name>
        <servlet-class>com.miempresa.controller.ControladorReg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlLogin</servlet-name>
        <servlet-class>com.miempresa.controller.ControlLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regiscontrol.do</servlet-name>
        <servlet-class>com.miempresa.controller.RegisControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreguntaController</servlet-name>
        <servlet-class>com.miempresa.controller.PreguntaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamenController</servlet-name>
        <servlet-class>com.miempresa.controller.ExamenController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorRegistrar</servlet-name>
        <url-pattern>/controladorregistrar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConRecuContra</servlet-name>
        <url-pattern>/conrecucontra.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoController</servlet-name>
        <url-pattern>/productocontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorReg</servlet-name>
        <url-pattern>/controladorreg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlLogin</servlet-name>
        <url-pattern>/controllogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regiscontrol.do</servlet-name>
        <url-pattern>/regiscontrol.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreguntaController</servlet-name>
        <url-pattern>/preguntacontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamenController</servlet-name>
        <url-pattern>/examencontroller.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
